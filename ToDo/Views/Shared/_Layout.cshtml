<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ToDo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</head>
<body class="background-color body-background">
<header class="header-color">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-color header-border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial"/>

                <div class="flex-lg-grow-1 mx-auto">
                    <div class="text-center">
                        <a class="nav-link text-dark" draggable="false" asp-controller="Home" asp-action="Index">
                            <h3>ToDo</h3>
                        </a>
                    </div>
                </div>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" draggable="false" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" draggable="false" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)

</body>
</html>
