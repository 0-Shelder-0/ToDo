@model ToDo.Models.Account.RegisterModel
@{
    ViewData["Title"] = "SignUp";
}

<!DOCTYPE html>

<html>
<head>
    <main role="main">

        <h1 class="text-center">Register</h1>
        <div class="row">
            <div class="col-md-4 mx-auto">
                <form id="registerForm" asp-antiforgery="true" method="post" asp-action="SignUp" novalidate="novalidate">
                    <h4 class="text-center">Create a new account.</h4>
                    <hr>

                    <div class="form-group">
                        <label class="col-form-label">Email</label>
                        <span class="text-danger">
                            <div>
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </span>
                        <input class="form-control" asp-for="Email">
                        <span class="invalid-feedback" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Password</label>
                        <span class="text-danger">
                            <div>
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </span>
                        <input class="form-control" asp-for="Password">
                        <span class="invalid-feedback" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Confirm password</label>
                        <span class="text-danger">
                            <div>
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </span>
                        <input class="form-control" asp-for="ConfirmPassword">
                        <span class="invalid-feedback" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                </form>
            </div>
        </div>


    </main>
</head>
<body>

</body>
</html>
