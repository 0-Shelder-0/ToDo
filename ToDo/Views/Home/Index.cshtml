@model ToDo.Models.Board.CreateBoardModel
@{
    ViewData["Title"] = "Home Page";
}

<h3 class="mx-auto text-center">Boards</h3>
<hr>

<div class="col-md-4">
    <form method="post" asp-antiforgery="true" asp-controller="Board" asp-action="CreateBoard" novalidate="novalidate">
        <div class="form-group">
            <label class="col-form-label">Name</label>
            <span class="text-danger">
                <div>
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </span>
            <input class="form-control" asp-for="Name">
            <span class="invalid-feedback" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Board</button>
        </div>
    </form>
</div>
